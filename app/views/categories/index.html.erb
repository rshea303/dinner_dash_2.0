<h1>Categories</h1>

<%= link_to "Create New Category", new_category_path %>

<ul>
  <% @categories.each do |category| %>
    <li><%= category.name %> | <%= link_to "Edit Category", edit_category_path(category) %> | <%= link_to "Delete Category", category_path(category), method: :delete %></li>
  <% end %>
</ul>
