<h1 style="margin-left: 12px;">User Registration Page</h1>

<%= form_for @user do |f| %>
  <div class="col-xs-2">
    <%= f.label :username %>
  </div>
  <div class="row">
    <div class="col-xs-4 field-font">
      <%= f.text_field :username %>
    </div>
  </div>
  <div class="col-xs-2">
    <%= f.label :email %>
  </div>
  <div class="row">
    <div class="col-xs-4 field-font">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="col-xs-2">
    <%= f.label :password %>
  </div>
  <div class="row">
    <div class="col-xs-4 font-field">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="col-xs-2">
    <%= f.label :password_confirmation %>
  </div>
  <div class="row">
    <div class="col-xs-4 font-field">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="col-xs-2 register-submit">
    <%= f.submit "Submit" %>
  </div>
<% end %>
