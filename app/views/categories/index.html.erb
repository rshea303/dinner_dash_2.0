<h1>Categories</h1>

<%= link_to "Create New Category", new_category_path %>


<table class="table">
  <thead>
    <tr>
      <th>Category Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to "Edit", edit_category_path(category) %></td>
        <td><%= link_to "Delete", category_path(category), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
