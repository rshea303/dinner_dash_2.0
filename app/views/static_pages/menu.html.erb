<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <a href="#pasta">Pasta</a> | <a href="#dessert">Dessert</a> | <a href="#beverages">Beverages</a>
  </div>
  <% @categories.each do |category| %>
    <h1 id="<%= category.name  %>"><%= category.name.capitalize %></h1>
    <% category.items.each do |item| %>
      <div class="item">
        <p><%= item.name %></p>
        <p><%= item.description %></p>
        <p><%= formatted_price(item.price) %></p>
      </div>
    <% end %>
  <% end %>
