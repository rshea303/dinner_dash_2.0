<div class="row">
  <div class="col-xs-8 col-xs-offset-2" style="text-align: center;">
    <h3><a href="#pasta">Pasta</a> | <a href="#dessert">Dessert</a> | <a href="#beverages">Beverages</a></h3>
    <div class="row">
      <% @categories.each do |category| %>
        <div class="row category-title" style="text-align: left; margin-left: 0px;">
          <h3 id="<%= category.name  %>"><%= category.name.capitalize %></h3>
        </div>
        <% category.items.each do |item| %>
        <div class="item" style="border: 1px solid black; margin-bottom: 10px; padding: 15px;">
          <span class="col-xs-2" style="text-align: left;"><%= item.name.capitalize %></span>
          <span><%= item.description %></span>
          <span style="margin-left: 50px;"><%= formatted_price(item.price) %></span>
          <span style="float: right;"><%= button_to "Add to Cart", cart_items_path(item_id: item.id) %></span>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
